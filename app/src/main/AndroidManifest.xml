<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.giang.longschat_firebase">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Firebase.FirebaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".Other.OnClearFromRecentService"
            android:stopWithTask="false" />

        <activity
            android:name=".OtherActivity.LoginActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainInterface" />
        <activity
            android:name=".OtherActivity.InfomationActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".OtherActivity.AccountManager" />
        <activity
            android:name=".OtherActivity.ChangeEmail"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".OtherActivity.ChangePassword"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".OtherActivity.ChatRoomActivity"
            android:windowSoftInputMode="stateHidden"></activity>
    </application>

</manifest>